mixin people(data)
  include list.jade
  section.people.backgrounded.left
    h1 People
    p
    +list(data)
    .modal.flex
      .content
        .title.flex
          .heading.flex.column
            h1
            h2
          .separator
          ul.social.flex
            a.mail
              li
                svg 
                  use(xlink:href='#mail')
            a.facebook
              li
                svg 
                  use(xlink:href='#fb')
            a.linkedin
              li
                svg 
                  use(xlink:href='#linkedin')
        .info.flex
          .photo
          .details.flex.column
            p
            .list