mixin courseList(data)
  .courseList
    h1 Courses
    ul
      each course in data
        li.flex.column
          .description.flex
            img(src='/img/courses/' + course.logo)
            .text.flex.column
              h1 #{course.name}
              p #{course.description}
          .buttons.flex
            a(href=course.presentation target='_blank')
              button
                svg
                  use(xlink:href='#download')
                | Course presentation
            button
              svg
                use(xlink:href='#crown')
              | Student Hit List